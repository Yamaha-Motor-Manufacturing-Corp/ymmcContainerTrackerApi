@page
@model YmmcContainerTrackerApi.Pages.IndexModel
@{
    ViewData["Title"] = "YMMC Container Tracker";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            
            @if (!Model.HasAccess)
            {
                <!-- ACCESS DENIED PAGE -->
                <div class="card border-danger shadow-lg">
                    <div class="card-header bg-danger text-white text-center">
                        <h2 class="mb-0">
                            <i class="bi bi-shield-x"></i> Access Denied
                        </h2>
                    </div>
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                        </div>
                        <h4 class="mb-3">You do not have permission to access this application</h4>
                        <p class="lead mb-4">
                            Your Windows account <strong>@Model.CurrentUser</strong> 
                            (<code>@Model.UserIdentity</code>) is not authorized.
                        </p>
                        
                        <!-- SHOW SPECIFIC REASON -->
                        @if (!string.IsNullOrEmpty(Model.DenialReason))
                        {
                            <div class="alert alert-warning">
                                <strong>Reason:</strong> @Model.DenialReason
                            </div>
                        }
                        
                        <hr>
                        <div class="text-start">
                            <h5>To request access:</h5>
                            <ol>
                                <li>Contact your system administrator</li>
                                <li>Provide your username: <code>@Model.CurrentUser</code></li>
                                <li>Request access to YMMC Container Tracker</li>
                                @if (!Model.HasAdAccess)
                                {
                                    <li>You may need to be added to the required Active Directory security group</li>
                                }
                            </ol>
                        </div>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <small>YMMC Container Tracker - Security Notice</small>
                    </div>
                </div>
            }
            else
            {
                <!-- ACCESS GRANTED - DASHBOARD -->
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-box-seam"></i> YMMC Container Tracker
                        </h3>
                    </div>
                    <div class="card-body">
                        
                        <!-- Welcome Message -->
                        <div class="alert alert-success">
                            <h5 class="mb-0">
                                <i class="bi bi-person-check-fill"></i> 
                                Welcome, <strong>@Model.CurrentUser</strong>
                                <span class="badge bg-primary ms-2">@Model.UserRole</span>
                            </h5>
                        </div>

                        <!-- Navigation Cards -->
                        <div class="row g-4 mt-2">
                            
                            <!-- View Containers -->
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-box-seam display-4 text-primary"></i>
                                        <h5 class="card-title mt-3">View Containers</h5>
                                        <p class="card-text text-muted">Browse and search returnable containers</p>
                                        <a href="/ReturnableContainers/Index" class="btn btn-primary">
                                            <i class="bi bi-eye"></i> Open
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Reports -->
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <i class="bi bi-file-earmark-bar-graph display-4 text-info"></i>
                                        <h5 class="card-title mt-3">Reports</h5>
                                        <p class="card-text text-muted">View analytics and reports</p>
                                        <a href="/Reports/Index" class="btn btn-info text-white">
                                            <i class="bi bi-graph-up"></i> View Reports
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- PERMISSIONS SUMMARY - ONLY SHOWS GRANTED PERMISSIONS -->
                        @if (Model.GrantedPermissions.Any())
                        {
                            <div class="card mt-4 bg-light">
                                <div class="card-body">
                                    <h6 class="mb-3">
                                        <i class="bi bi-shield-check"></i> Your Permissions
                                    </h6>
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var permission in Model.GrantedPermissions)
                                        {
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle-fill text-success"></i>
                                                @permission
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="card-footer text-muted text-center">
                        <small>Logged in as: <code>@Model.UserIdentity</code></small>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Styles {
    <style>
        .opacity-50 {
            opacity: 0.5;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover:not(.opacity-50) {
            transform: translateY(-3px);
        }
    </style>
}
